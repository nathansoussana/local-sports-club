.edit-form {
  background: #ffffffc2;
  padding: 30px 80px;
  margin-top: 20px;
  border-radius: 5px;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
  color: rgb(13, 13, 13);
}

.banner {
  background-image: linear-gradient(rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.6)), url(<%= image_path('signup-background.jpg') %>);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  height: 100%;
}

.edit-heading {
    font-size: 30px;
    font-weight: bold;
    margin-bottom: 30px;
    text-align: center;
    color: rgb(16, 29, 74);
}
