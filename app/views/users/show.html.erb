<div class="row">
  <div class="col-md-5 mx-auto">
    <div class="bg-white shadow rounded overflow-hidden">
      <div class="px-4 pt-0 pb-4 cover">
        <div class="media align-items-end profile-head">
          <div class="profile mr-3">
            <%= cl_image_tag @user.photo.key, width: 130, class: "rounded mb-2 img-thumbnail" %>
            <% if current_user == @user %>
              <a href="<%= edit_user_registration_path %>" class="btn btn-outline-dark btn-sm btn-block">Edit profile</a>
            <% end %>
          </div>
          <div class="media-body mb-5">
            <h4 class="mt-0 mb-0">
              <%= @user.first_name %> <%= @user.last_name %> |
              <%= calculate_age(@user.birth_date) %> | <%= @user.gender %>
            </h4>
            <p class="small mb-4">
              <i class="fas fa-map-marker-alt mr-2"></i><%= @user.location %>
            </p>
          </div>
        </div>
      </div>
      <div class="px-4 py-3">
        <h5 class="mb-0">Sports</h5>
        <% if @user_sports.any? %>
          <div class="row g-3 py-4">
            <% @user_sports.each do |user_sport| %>
              <div class="col-6 col-md-4 col-lg-3">
                <%= link_to sport_path(user_sport.sport), style: "text-decoration: none;" do %>
                  <%= render partial: "shared/sport_card", locals: {
                      sport: user_sport.sport.name,
                      url: user_sport.sport.icon } %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p>No sports selected yet.</p>
        <% end %>
      </div>
      <div class="px-4 py-3">
        <h5 class="mb-0">About</h5>
        <p><%= @user.about %></p>
      </div>

      <!-- My Past Events -->
      <div class="py-4 px-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h5 class="mb-0">My Past Events</h5>
        </div>
        <div class="row g-3 d-flex">
          <% @past_events.each do |event| %>
            <div class="col-md-6 col-lg-4">
              <div class="card-event d-flex ">
                <div class="card-event-details w-75 ps-4 py-4 d-flex flex-column justify-content-center">
                  <h6 class="card-event-title"><%= event.sport.name %></h6>
                  <h5 class="card-event-title mb-3"><%= event.name %>!</h5>
                  <div class="card-event-date d-flex align-items-center mb-2">
                    <div class="me-2">üìÜ</div>
                    <div><%= event.date.strftime("%e %B %Y, %H:%M") %></div>
                  </div>
                  <div class="card-event-location d-flex align-items-center mb-2">
                    <div class="me-2">üìç</div>
                    <div><%= event.address %></div>
                  </div>
                  <div class="card-event-details align-items-center d-flex">
                    <div class="me-2">üí™</div>
                    <div><%= event.level %></div>
                  </div>
                </div>
                <div class="card-link w-25 d-flex justify-content-center align-items-center">
                  <%= link_to event do %>
                    <i class="fa-solid fa-chevron-right p-4" style="color: #000000;"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- My Upcoming Events -->
      <div class="py-4 px-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h5 class="mb-0">My Upcoming Events</h5>
        </div>
        <div class="row g-3 d-flex">
          <% @joined_events.each do |event| %>
            <div class="col-md-6 col-lg-4">
              <div class="card-event d-flex ">
                <div class="card-event-details w-75 ps-4 py-4 d-flex flex-column justify-content-center">
                  <h6 class="card-event-title"><%= event.sport.name %></h6>
                  <h5 class="card-event-title mb-3"><%= event.name %>!</h5>
                  <div class="card-event-date d-flex align-items-center mb-2">
                    <div class="me-2">üìÜ</div>
                    <div><%= event.date.strftime("%e %B %Y, %H:%M") %></div>
                  </div>
                  <div class="card-event-location d-flex align-items-center mb-2">
                    <div class="me-2">üìç</div>
                    <div><%= event.address %></div>
                  </div>
                  <div class="card-event-details align-items-center d-flex">
                    <div class="me-2">üí™</div>
                    <div><%= event.level %></div>
                  </div>
                </div>
                <div class="card-link w-25 d-flex justify-content-center align-items-center">
                  <%= link_to event do %>
                    <i class="fa-solid fa-chevron-right p-4" style="color: #000000;"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
