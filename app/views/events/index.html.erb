<div style="background-image: linear-gradient(rgba(255, 255, 255, 0.75), rgba(255, 255, 255, 0.75)), url(https://images.unsplash.com/photo-1556056504-5c7696c4c28d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1876&q=80); background-position: center center;">
  <div class="container-xxl background-container d-flex flex-column">
    <div class="my-auto">
      <h1>Events around you</h1>
      <p>Check events happening around you: search by sport, location, or simply browse around.</p>
      <%= render partial: "shared/search_bar" %>
    </div>
  </div>
</div>

  <div class="horizontal-spacer"></div>

<div class="container-xxl my-4">
  <%# Event Cards %>
  <div class="row g-3 d-flex">

      <% 18.times do %>
      <div class="col-md-6 col-lg-4">

        <div class="card-event d-flex ">

          <%# Content %>
          <div class="card-event-details w-75 p-4 d-flex flex-column justify-content-center">
            <h5 class="card-event-title mb-3">
              Football
            </h5>
            <div class="card-event-date mb-2">
              📆&nbsp;&nbsp;Wed, 21 Jun, 17:00
            </div>
            <div class="card-event-location mb-2">
              📍&nbsp;&nbsp;ASVZ Zürich
            </div>
            <div class="card-event-details">
              💪&nbsp;&nbsp;Intermediate
            </div>
            <div class="card-event-participants mt-3">
              <% rand(1..3).times do %>
                <i class="fa-solid fa-circle-user fa-xl"></i>&nbsp;
              <% end %>
              <i class="fa-regular fa-circle-plus fa-xl"></i>
            </div>
          </div>

          <%# Link %>
          <div class="card-link w-25 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-chevron-right"></i>
          </div>
        </div>

      </div>
      <% end %>
  </div>
</div>
</div>
