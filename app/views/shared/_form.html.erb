<%= simple_form_for (@event) do |f| %>
  <div class="form-inputs my-4">
    <%= f.input :name %>
    <%= f.association :sport, prompt: "Select a sport" %>
    <%= f.input :description, label: 'Describe your event' %>
    <%= f.input :date, as: :datetime %>
    <%= f.input :address %>
    <%= f.input :level, collection: [[ "Beginner", "beginner" ], [ "Intermediate", "intermediate" ], [ "Advanced", "advanced" ], [ "Open for all", "forall" ]], prompt: "Select an option" %>
    <%= f.input :participant_number, label: 'Number of participants', as: :integer %>
    <%= f.input :duration, label: 'Duration in hours' %>
    <%= f.submit class: "btn btn-dark me-2" %>
    <%= link_to "Back", root_path, class: "btn btn-outline-dark" %>
  </div>
<% end %>
