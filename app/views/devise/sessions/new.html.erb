<div class="banner d-flex flex-column vh-100" style="background-image: linear-gradient(rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.6)), url(<%=asset_path('login-background.jpg')%>);">
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 d-flex flex-column justify-content-center align-items-center w-100">
        <div class="form-login">
          <h2>Log in</h2>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            placeholder: "",
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            placeholder: "",
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Next", class:"btn btn-yellow"%>
              </div>
          <% end %>

          <%= render "devise/shared/links" %>
         </div>
      </div>
    </div>
  </div>
</div>
