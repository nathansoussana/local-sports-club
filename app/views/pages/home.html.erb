<% content_for(:navbar_class, "navbar-home") %>

<div class="banner d-flex flex-column vh-100" style="background-image: linear-gradient(rgba(255, 255, 255, 0.75), rgba(255, 255, 255, 0.75)), url(<%=asset_path('home-background-tennis.jpg')%>);">

  <%# Main Text %>
  <div class="container my-5">
    <h1 >The Local Sports Club</h1>
    <h2 class="mt-0">Uniting Sports Lovers Around the World</h2>
    <p>Join our community, make new friends, play your favourite sports.</p>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-dark btn-lg"%>
    <a class="btn btn-yellow btn-lg" href="#">Sign up</a>
  </div>

  <%# Icons %>
  <div class="icon-container inline container mt-5">
    <div class="row">
      <div class="col-12 col-lg-4 my-2 d-flex align-items-center">
        <i class="fa-solid fa-users"></i>
        <p>50000+ Total players</p>
      </div>
      <div class="col-12 col-lg-4 my-2 d-flex align-items-center">
        <i class="fa-solid fa-globe"></i>
        <p>20+ countries</p>
      </div>
      <div class="col-12 col-lg-4 my-2 d-flex align-items-center">
        <i class="fa-solid fa-calendar-plus"></i>
        <p>1000+ events daily</p>
      </div>
    </div>
  </div>
</div>
